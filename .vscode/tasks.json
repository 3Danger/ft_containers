{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "myTask",
			"command": "/usr/bin/clang",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-I.${workspaceFolder}/srcs/map",
				"${workspaceFolder}/srcs/map/main.cpp",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang"
		}
	]
}